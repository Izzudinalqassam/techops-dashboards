# Docker Environment Configuration
# This file contains environment variables for Docker Compose setup

# Database Configuration (PostgreSQL container)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dashboard
DB_USER=postgres
DB_PASSWORD=docker_postgres_2024

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=docker_jwt_secret_2024_change_in_production_environment
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=docker_refresh_secret_2024_change_in_production_environment
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024